<h1>Sign Up</h1>
<%= form_for @account do |f| %>
  <p>Name: <%= f.text_field :name %> </p>
  <p>Email: <%= f.text_field :email %> </p>
  <p>Password: <%= f.text_field :password %> </p>
  <p>Confirm Password: <%= f.text_field :password %> </p>
  <p>Bio: <%= f.text_area :bio %> </p>
  <%= f.submit :Create %>
  <% end %>


<%# original syntax (:account, :url => {:controller => 'accounts', :action=> 'create'})%>
