<h1><%= @chronicle.name %></h1>
<h3><%= @chronicle.description %></h3>
  <h5><%  if @chronicle.private == true%>
      	<%= "this chronicle is private"  %>
      <% else %>
      	<%= "this chronicle is public" %>
      <%end%>
  </h5>
<h5>Browse all <%= link_to "chronicles", chronicles_path %></h5>

<div class="tags">
  <% if !@chronicle.tags.blank? %>
    <% @chronicle.tags.each do |tag|%>
      <%=link_to tag.name, searches_path( :"search[search_term]" => tag.name, :commit=>"Chronicles")%>
    <% end %>
  <% end %>
</div>


<h3><%= @chronicle.upvotes %></h3>
<%= form_for @chronicle_vote do |f| %>
	<%= f.hidden_field :upvote, value: true %>
	<%= f.hidden_field :chronicle_id, value: @chronicle.id %>
	<%= image_submit_tag('upvote.svg', width: "60", height: "60") %>
<% end %><br />

<h3><%= @chronicle.downvotes %></h3>
<%= form_for @chronicle_vote do |f| %>
	<%= f.hidden_field :downvote, value: true %>
	<%= f.hidden_field :chronicle_id, value: @chronicle.id %>
	<%= image_submit_tag('downvote.svg', width: "60", height: "60") %>
<% end %><br />


<% @chronicle.articles.each do |article| %>
	<% if article.pic_url.blank? %>
		<%= image_tag("article_default", size: "100x60") %>
	<% else %>
		<%= image_tag(article.pic_url, size: "100x60") %>
	<% end %>

	<%= link_to article.title, article.url %>
	<br>
<% end %>

<br>

<%= render "comments/new_comments" %><br />
<%= render "comments/comments" %><br />
