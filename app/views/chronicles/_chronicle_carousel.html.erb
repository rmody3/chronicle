<div class="owl-carousel owl-theme">
  <% chronicle.articles.each do |article| %>
    <div class="item">
      <div class="articleContainer">
        <% if article.pic_url.blank? %>
          <%= image_tag("article_default", size: "500x240") %>
        <% else %>
          <%= image_tag(article.pic_url, size: "500x240") %>
        <% end %>
        <strong class="articleInfo"><%= link_to article.title, article.url, target: :_blank, class: "articleLink"%><br /><%= article.date %></strong>
      </div>
    </div>
  <% end %>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    $('.owl-carousel').owlCarousel({
    margin:5,
    nav:true,
    responsive:{
        350:{
            items:1
        },
        450:{
            items:2
        },

        750:{
            items:3
        },

        1000:{
          items:4
        }
      }
    })
  })
</script>
