<h1>Create a New Chronicle</h1>
<%= form_for @chronicle do |f| %>
<div class="create_chronicle">
  <%=f.label :name %>
  <%=f.text_field :name %>
</div>
<div class="create_chronicle">
  <%=f.label :description %>
  <%=f.text_area :description %>
</div>
<div class="create_chronicle">
  <%=f.label :public, 'Make Private?' %>
  <%=f.check_box :public, checked_value: false %>
</div>
<div class="create_chronicle">
  <%=f.submit %>
</div>
<% end %>
