<h1> Welcome to Chronicle</h1>

<h1> Chronicle: get the whole story(can change catchphrase if you want)</h1>
<% unless current_account %>
  <%= render "login"%>
<% end %>

<h3> Today's Trending Chronicles(add sideways scroll)</h3>
<% @chronicle_match[0...5].each do |chron| %>
	<%= link_to chron.name %>
	<%= link_to image_tag('books.svg', size: '100x100'), chron.name %>
	<br>

	<% chron.articles.each do |article| %>
		<%= link_to image_tag(article.pic_url, size: '80x80'), article.url %>
		<%= link_to article.title, article.url %>
	<% end %>

	<% if current_account %>
		<% unless Subscription.find_by(chronicle_id: chron.id, account_id: current_account.id)  %>
			<%= button_to('+', subscriptions_path, method: :post, params: {chronicle_id: chron.id})%>
		<% end %>
	<% end %>
	<br>
<% end %>



