<%= form_for(@account, url: sessions_path, html: {class: "form-inline center"}) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit :Login, class: "btn btn-default"%>
    or <%= link_to "Sign up now", new_account_path, class: "btn btn-default"%>
  </div>

<% end %>
